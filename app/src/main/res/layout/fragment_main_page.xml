<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.yourapp.MainPageFragment"
        android:label="Main Page"
        tools:layout="@layout/fragment_main_page">
        <action
            android:id="@+id/action_mainPageFragment_to_myApplicationFragment"
            app:destination="@id/myApplicationFragment" />
        <action
            android:id="@+id/action_mainPageFragment_to_myBillsFragment"
            app:destination="@id/myBillsFragment" />
    </fragment>

    <fragment
        android:id="@+id/myApplicationFragment"
        android:name="com.example.yourapp.MyApplicationFragment"
        android:label="My Application"
        tools:layout="@layout/fragment_my_application" />

    <fragment
        android:id="@+id/myBillsFragment"
        android:name="com.example.yourapp.MyBillsFragment"
        android:label="My Bills"
        tools:layout="@layout/fragment_my_bills" />

</navigation>